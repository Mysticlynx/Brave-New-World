<?xml version="1.0" encoding="UTF-8"?>
<locust xmlns="http://www.muzzylane.com/ml/schema/2009/04/locust">
	
	<!-- Border -->
	<objectDef type="UI3DLayerControlBorder" superType="mlui.UI3DLayer">
		<propertyDef name="objGameRoot" type="Object"/>
		<object type="ml3dworld.TransformTranslate" name="objTransform">
			<property name="vecTranslation">
				Vec3D(0, 0, 0.27)
			</property>
		</object>        
	    <object type="UI3DMapBordersLayer" name="objBorders">
	        <property name="objGameRoot" from="def.objGameRoot"/>
	        <property name="tmplBorderAlphaTexture" value="BorderAlpha"/>
	        <property name="tmplOwnerBorderAlphaTexture" value="OwnerBorderAlpha"/>
	    </object>
    </objectDef>
	
</locust>