        <propertyDef name="strText" type="String"/>
        <propertyDef name="objAnswers" type="DecisionPointAnswer" variable="true" storesChildren="true"/>
        <propertyDef name="nTurnAdded" type="int" default="-1"/>        
	</objectDef>

</locust>
