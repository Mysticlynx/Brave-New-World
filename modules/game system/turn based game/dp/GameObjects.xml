	<objectDef type="DecisionPoint" class="CMLODecisionPoint" desc="A decision point">
        <goDef gameSystem="GameSysDecisionPoint" storageProperty="objDecisionPoints">
            <keyProperty name="strID"/>
        </goDef>
		<propertyDef name="strID" type="String"/>
